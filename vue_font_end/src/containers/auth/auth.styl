.auth{
  .title{
    font-size 20px
    color #666
    margin-bottom 35px
    position relative
    padding-left 15px
    &:before{
      content ""
      display block
      position absolute
      top 4px
      left 0
      width 5px
      height 20px
      background #2d8cf0
    }

  }
  .ivu-tree{
    display :flex;
    justify-content flex-start
    .ivu-tree-children{
      margin-right 20px
    }
  }
  .first-level{
    border-bottom: 1px solid #e9e9e9;
    padding-bottom:6px;
    margin-bottom:15px;

    &:last-child{
      border-bottom none
    }
    .second-level{
      margin-left 10px;
      margin-top 15px
      .second-level-title{
        margin-bottom 5px
      }
      .third-level{
        margin-left 10px
      }
    }
  }
}
